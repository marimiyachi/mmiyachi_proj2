<h3>Recent Orders</h3>
<br/>
<% if @storekeeper.orders.any? %>
<table class="table table-striped table-bordered">
<tr>
  <th>Order Number</th>
  <th>Customer Info</th>
  <th>Item Info</th>
</tr>
<% @orders.each do |order| %>
  <% if order.contains_items_from(@storekeeper) %>
  <tr>
    <td><%= order.id %></td>
    <td><%= order.customer_name %>, <%= order.customer_email %></td>
    <td><% order.order_its.each do |item| %>
      <% if Item.find_by_id(item.item_number).store_id == Store.find_by_storekeeper_id(@storekeeper.id).id %>
      [<%= item.item_number %>] <%= item.item_name %> <br/>
      <% end %>
  <% end %></td>
  </tr>
  <% else %>
  <% end %>
<% end %>
</table>
<% end %>
