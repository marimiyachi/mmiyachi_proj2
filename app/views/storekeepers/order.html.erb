<% provide(:title, 'Orders') %>
<h3>Orders Placed in Your Store</h3>
<br/>
<% if current_storekeeper.orders.any? %>
<table class="table table-striped table-bordered">
<tr>
  <th>Order Number</th>
  <th>Customer Info</th>
  <th>Item Info</th>
  <th></th>
</tr>
<% @orders.each do |order| %>
  <% if order.order_its.any? %>
  <% if order.contains_items_from(@storekeeper) %>
  <tr>
    <td><%= order.id %></td>
    <td><%= order.customer_name %>, <%= order.customer_email %></td>
    <td><% order.order_its.each do |item| %>
      <% if Item.find_by_id(item.item_number).store_id == @storekeeper.stores.first.id %>
      [<%= item.item_number %>] <%= item.name %>, $<%= item.price %> <br/>
      <% end %>
  <% end %></td>
    <td><% if order.check_fufilled %>Order fufilled <% else %>
    <%= link_to "Fufill order", fufill_url(:oid => order.id) %><% end %></td>
  </tr>
  <% end %>
  <% end %>
<% end %>
</table>
<% end %>
<br/>
<h3>Orders You've Placed</h3>
<br/>
<table class="table table-striped table-bordered">
<% if @orders.any? %>
<tr>
  <th>Order Number</th>
  <th>Item Info</th>
  <th>Status</th>
</tr>
<% @orders.each do |order| %>
  <% if order.order_its.any? %>
  <% if order.storekeeper_id == @storekeeper.id %>
  <tr>
    <td><%= order.id %></td>
    <td><% order.order_its.each do |item| %>
      [<%= item.item_number %>] <%= item.name %>, $<%= item.price %> from <%= item.store_id %> <br/>
      <% end %>
    </td>
    <td><%= order.check_status%></td>
  </tr>
  <% end %><% end %>
<% end %>
</table>
<% end %>
