<% if @storekeeper.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-error">
      The form contains <%= pluralize(@storekeeper.errors.count, "error") %>.
    </div>
    <ul>
    <% @storekeeper.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
