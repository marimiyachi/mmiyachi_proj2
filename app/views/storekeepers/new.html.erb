<% provide(:title, 'Storekeeper Sign Up') %>
<h1>New storekeeper</h1>

<div class="row">
  <div class="span 6 offset3">
    <%= form_for(@storekeeper) do |f| %>
      <%= render 'error_messages' %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>
      
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create Storekeeper Account", class: "btn btn-larg btn-primary" %>
    <% end %>
  </div>
</div>
