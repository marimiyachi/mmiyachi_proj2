<h1>Listing stores</h1>

<table class="table table-striped table-bordered">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @stores.each do |store| %>
  <tr>
    <td><%= store.name %></td>
    <td><%= store.description %></td>
    <td><%= link_to 'Show', shop_url(:id => store.id) %></td>
  </tr>
<% end %>
</table>
